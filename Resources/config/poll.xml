<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bait_poll.poll" class="Bait\PollBundle\Poll" scope="request">
            <argument type="service" id="request" />
            <argument type="service" id="templating" />
            <argument type="service" id="bait_poll.entity_manager" />
            <argument type="service" id="bait_poll.form_factory" />
            <argument type="service" id="bait_poll.poll.manager" />
            <argument type="service" id="bait_poll.vote.manager" />
            <argument>%bait_poll.form.template%</argument>
            <argument>%bait_poll.field.class%</argument>
        </service>
    </services>
</container>
